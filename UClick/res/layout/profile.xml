<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1280dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@drawable/menu_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.03"
                android:textSize="20sp"
            	android:fontFamily="Verdana"
                android:text="My Account" />

            <Spinner
                android:id="@+id/mainmenu"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.03"
                android:ellipsize="marquee"
                android:entries="@array/Menu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/lay_bg"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="MY INFORMATION"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/txtcolor1"
                    android:textSize="@dimen/txtsize"
                    android:textStyle="bold"
                    android:typeface="serif" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/q_date"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="40dp"
                    android:text="First Name:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/btntxtsize"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/pro_fname"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:text="Alexis" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Last Name:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/btntxtsize"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/pro_lname"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:text="Lkhagvadorj" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/q_points"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Email:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/btntxtsize"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/pro_email"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="0.23"
                    android:text="alexis@hotmail.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Student ID:"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/txt"
                    android:textSize="@dimen/btntxtsize"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/pro_sid"
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="40dp"
                    android:text="009284067" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lay_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="QUIZ HISTORY"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/txtcolor1"
                android:textSize="@dimen/txtsize"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ExpandableListView
                android:id="@+id/pro_qzlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1" >
            </ExpandableListView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>