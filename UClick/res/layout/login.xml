<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:gravity="center_horizontal|right|start"
    android:padding="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/log_email"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="@dimen/txtsize"
        android:typeface="normal" />

    <EditText
        android:id="@+id/log_pass"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@id/log_email"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="@dimen/txtsize" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/log_pass"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/rbtn_rem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:text="Remember Me"
            android:textColor="@color/txt"
            android:textSize="@dimen/txtsize" />

        <Button
            android:id="@+id/logbtn_log"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_small"
            android:fadingEdge="horizontal|vertical"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical|center_horizontal|top|bottom"
            android:text="Sign In"
            android:textAlignment="center"
            android:textColor="@color/txtcolor1"
            android:textSize="@dimen/btntxtsize"
            android:typeface="serif" />

        <Button
            android:id="@+id/logbtn_reg"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_small"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/txtcolor1"
            android:textSize="@dimen/btntxtsize"
            android:typeface="serif" />

        <Button
            android:id="@+id/logbtn_pass"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/btn_small"
            android:gravity="center_vertical|center_horizontal|bottom|fill_vertical"
            android:text="Forgot Password?"
            android:textAlignment="center"
            android:textColor="@color/txtcolor1"
            android:textSize="@dimen/btntxtsize"
            android:typeface="serif" />

    </LinearLayout>

</RelativeLayout>